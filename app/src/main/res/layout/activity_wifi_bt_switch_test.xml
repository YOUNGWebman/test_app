<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WifiBtSwitchTestActivity">

    <Button
        android:id="@+id/wifi_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="WiFi"
        android:textSize="8sp" />

    <Button
        android:id="@+id/bluetooth_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:text="BT"
        android:textSize="8sp" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="250dp"
        android:text="STOP"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/wifi_count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="0dp"
        android:text="WiFi打开成功的次数: 0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/bluetooth_count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="350dp"
        android:text="BT打开成功的次数: 0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/testTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前运行时间： 00:00:00"
        android:textSize="20sp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="0dp" />


</RelativeLayout>